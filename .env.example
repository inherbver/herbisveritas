# Template for environment variables
# Copy this file to .env.local and fill in the values
# DO NOT commit .env.local to git!

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Find these values in your Supabase project settings: Project Settings > API

# Public Supabase URL (safe to expose on client-side)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Anonymous key (safe to expose on client-side)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Service role key (NEVER expose on client-side - server only)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# STRIPE CONFIGURATION
# ===========================================
# Get these from your Stripe Dashboard: Developers > API Keys

# Publishable key (safe to expose on client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Secret key (NEVER expose on client-side - server only)
STRIPE_SECRET_KEY=your_stripe_secret_key

# Webhook secret for validating Stripe webhooks
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Base URL for redirects and webhooks
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
# Primary admin user UUID (will be moved to database)
ADMIN_PRINCIPAL_ID=your_admin_user_uuid

# Internal function secret for secure server operations
INTERNAL_FUNCTION_SECRET=your_internal_function_secret